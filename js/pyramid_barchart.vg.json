{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#F0F8FF",
  "params": [
    {
      "name": "Gender_selection",
      "value": "Male",
      "bind": {
        "input": "select",
        "options": [
          
          "Male",
          "Female"
        ],
        "labels": [
          
          "Male",
          "Female"
        ],
        "name": "Gender selection: "
      }
    }],
  "data": {
      "url": "https://raw.githubusercontent.com/linhtran25/Visualisation2/main/data7.csv"
  },
  "transform": [
      {
          "calculate": "datum.Sex == 2 ? 'Female' : 'Male'",
          "as": "gender"
      },
      {"filter": "Gender_selection == null || datum.Sex == Gender_selection"}

  ],
  "width": {
      "step": 16
  },
  "mark": "bar",
  "encoding": {
      "column": {
          "field": "Year",
          "type": "ordinal",
          "spacing": 10,
          "header": {
              "orient": "bottom"
          }
      },
      "y": {
          "aggregate": "sum",
          "field": "unemployment ",
          "title": "Unemployment Rate",
          "axis": {
              "grid": false
          }
      },
      "x": {
          "field": "gender",
          "axis": null
      },
      "color": {
          "field": "gender",
          "scale": {
              "range": [
                  "#ef8a62",
                  "#67a9cf"
              ]
          }
      },
      "tooltip": [
        {
          "field": "Sex",
          "type": "nominal",
          "title": "Gender"
        },
        
        {
          "field": "unemployment ", 
          "aggregate": "sum", 
          "title": "Unemployment rate",
          "type": "quantitative", 
          "format": ".2f"}
      ]
  },
  "config": {
    "view": {"stroke": null},
    "axis": {
        "grid": false,
        "labelFontSize": 14,
        "titleFontSize": 15},
    "font": "Maven Pro"
  }
}